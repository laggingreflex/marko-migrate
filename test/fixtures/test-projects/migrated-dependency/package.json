{
  "name": "todomvc-marko",
  "version": "1.0.0",
  "description": "Sample TodoMVC app built using Marko, Marko Widgets and Lasso.js",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "npm run test-server -s && npm run test-browser -s && npm run jshint -s",
    "jshint": "node_modules/.bin/jshint src/",
    "test-server": "node_modules/.bin/mocha --ui bdd --reporter spec ./test/server",
    "test-browser": "node test/mocha-phantomjs/run.js",
    "mocha-phantomjs": "mocha-phantomjs ./test/mocha-phantomjs/generated/test-page.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js-samples/todomvc-marko.git"
  },
  "author": "Patrick Steele-idem <pnidem@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marko-js-samples/todomvc-marko/issues"
  },
  "homepage": "https://github.com/marko-js-samples/todomvc-marko",
  "dependencies": {
    "app-module-path": "^1.0.1",
    "body-parser": "^1.12.3",
    "browser-refresh-taglib": "^1.0.2",
    "browser-request": "^0.3.3",
    "compression": "^1.2.0",
    "express": "^4.9.4",
    "jquery": "^2.1.3",
    "lasso": "^1.10.1",
    "lasso-less": "^2.0.6",
    "lasso-marko": "^2.0.3",
    "marko": "^2.7.3",
    "marko-widgets": "^5.0.0-beta",
    "native-promise-only": "^0.7.8-a",
    "raptor-args": "^1.0.2",
    "raptor-util": "^1.0.9",
    "serve-static": "^1.6.2",
    "todomvc-app-css": "^1.0.1",
    "todomvc-common": "^1.0.1"
  },
  "devDependencies": {
    "accessibility-developer-tools": "^2.7.0",
    "chai": "^2.3.0",
    "chai-a11y": "0.0.1",
    "cheerio": "^0.19.0",
    "ignoring-watcher": "^1.0.5",
    "mocha": "^2.2.5",
    "mocha-phantomjs": "^3.5.3",
    "phantomjs": "1.9.7-15"
  }
}
